<main class="product-show d-flex flex-column align-items-center">
  {{#each orders}}
    <div class="d-flex w-100 flex-wrap">
      <table class="table mr-5" style="flex-basis: 60%;">
        <thead>
          <tr>
            <th scope="col">Order details</th>
            <th scope="col">Quantity</th>
            <th scope="col">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          {{#each this.items}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.OrderItem.quantity}}</td>
              <td>{{formatDollar this.price}}</td>
            </tr>
          {{/each}}
          <tr>
            <td></td>
            <td style="text-align: right;">
              <h4>Total: </h4>
            </td>
            <td>
              <h4>{{formatDollar this.amount}}</h4>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="bg-light p-3" style="width: 350px;">
        <p class="font-weight-bold">Order information</p>
        <ul>
          <li>Order id: {{this.id}}</li>
          <li>Your name: {{this.name}}</li>
          <li>Address: {{this.address}}</li>
          <li>Phone #: {{this.phone}}</li>
          <li>shipping_status: {{this.shipping_status}}</li>
          <li>payment_status: {{this.payment_status}}</li>
        </ul>
        <div class="btn-group ml-3">
          <form action="/order/{{this.id}}/cancel" method="POST">
            <button type="submit" class="btn btn-dark btn-sm mr-2">Cancel Order</button>
          </form>
          <a href="/order/{{this.id}}/payment"><button class="btn btn-sm btn-primary">Payment</button></a>
        </div>
      </div>

    </div>


    <hr />
  {{/each}}
</main>