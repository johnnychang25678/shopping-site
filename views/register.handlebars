<main class="register-form d-flex align-items-center justify-content-center">
  <form class="form-signin" action="/register" method="POST" style="width: 500px">
    <div class="text-center mb-1">
      <h1 class="h3 mb-1 font-weight-normal">Register</h1>
    </div>
    {{> message}}
    <div class="form-label-group">
      <label for="inputEmail">Email</label>
      <input type="text" name="email" class="form-control" placeholder="Email" required autofocus>
    </div>
    <div class="form-label-group">
      <label for="inputPassword">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Password" required>
    </div>
    <div class="form-label-group">
      <label for="inputPasswordCheck">Password Check</label>
      <input type="password" name="passwordCheck" class="form-control" placeholder="Password Check" required>
    </div>
    <br />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
    <div class="text-center mb-4 mt-1">
      <p>Already have an account? <a href="/login">Login</a></p>
    </div>
  </form>
</main>